{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {},
        "outDir": "./dist",
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
        "./types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}